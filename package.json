{
  "name": "roku-client",
  "version": "2.1.0",
  "description": "Send commands to your Roku devices",
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test:unit": "NODE_ENV=development jest",
    "test:watch": "npm run test:unit -- --watch",
    "test:coverage": "npm run test:unit -- --coverage",
    "lint": "tslint -p .",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "test": "npm run lint && npm run test:coverage",
    "build": "tsc",
    "release": "standard-version",
    "prepublishOnly": "npm run test && npm run build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "roku",
    "ssdp"
  ],
  "bugs": {
    "url": "https://github.com/bschlenk/node-roku-client/issues"
  },
  "homepage": "https://github.com/bschlenk/node-roku-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/bschlenk/node-roku-client"
  },
  "author": "Brian Schlenker <bschlenk@umich.edu> (http://github.com/bschlenk)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/debug": "^0.0.30",
    "@types/es6-promisify": "^6.0.0",
    "@types/jest": "^23.3.1",
    "@types/lodash.camelcase": "^4.3.4",
    "@types/lodash.reduce": "^4.6.4",
    "@types/lodash.values": "^4.3.4",
    "@types/node": "^10.5.6",
    "@types/node-fetch": "^2.1.2",
    "@types/tmp": "^0.0.33",
    "@types/xml2js": "^0.4.3",
    "husky": "^1.1.2",
    "jest": "^23.4.2",
    "jest-fetch-mock": "^1.6.5",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.1.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "es6-promisify": "^6.0.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.reduce": "^4.6.0",
    "lodash.values": "^4.3.0",
    "node-fetch": "^2.2.0",
    "node-ssdp": "^3.3.0",
    "xml2js": "^0.4.19"
  }
}
