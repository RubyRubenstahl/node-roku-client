{
  "name": "roku-client",
  "version": "1.0.17",
  "description": "Send commands to your Roku devices",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint index.js lib/*",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "build": "NODE_ENV=production babel lib -d dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "keywords": [
    "roku",
    "ssdp"
  ],
  "bugs": {
    "url": "https://github.com/bschlenk/node-roku-client/issues"
  },
  "homepage": "https://github.com/bschlenk/node-roku-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/bschlenk/node-roku-client"
  },
  "author": "Brian Schlenker <bschlenk@umich.edu> (http://github.com/bschlenk)",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^21.2.1",
    "jest-fetch-mock": "^1.4.0"
  },
  "dependencies": {
    "es6-promisify": "^5.0.0",
    "lodash.reduce": "^4.6.0",
    "node-fetch": "^1.7.3",
    "node-ssdp": "^3.2.5",
    "tmp": "0.0.33",
    "xml2js": "^0.4.19"
  },
  "jest": {
    "setupFiles": [
      "./setup/jest-setup.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/index.js",
      "!lib/keys.js"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80
      }
    }
  }
}
