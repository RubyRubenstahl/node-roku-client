{
  "name": "roku-client",
  "version": "1.0.0",
  "description": "Send commands to your roku devices",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint index.js lib/*",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "build": "NODE_ENV=production babel lib -d dist"
  },
  "keywords": [
